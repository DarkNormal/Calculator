<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.marklordan.calculator.CalcActivity">

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/equal"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayoutTop"
        app:layout_constraintTop_toBottomOf="@+id/view"
        app:layout_constraintEnd_toEndOf="@+id/view"
        android:layout_marginEnd="16dp" />

    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_weight="1"
        android:background="@color/colorPrimary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayoutTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        android:weightSum="4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view">

        <Button
            android:id="@+id/button7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            android:text="@string/value7"
            android:textColor="#000"
            android:textSize="@dimen/button_text_size" />

        <Button
            android:id="@+id/button8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            android:text="@string/value8"
            android:textColor="#000"
            android:textSize="@dimen/button_text_size" />

        <Button
            android:id="@+id/button9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            android:text="@string/value9"
            android:textColor="#000"
            android:textSize="@dimen/button_text_size" />

        <ImageButton
            android:id="@+id/buttonDivide"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            app:srcCompat="@drawable/divide" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2ndTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:weightSum="4"
        app:layout_constraintStart_toStartOf="@+id/linearLayoutTop"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutTop"
        android:layout_marginStart="8dp">

        <Button
            android:id="@+id/button4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            android:text="@string/value4"
            android:textColor="#000"
            android:textSize="@dimen/button_text_size" />

        <Button
            android:id="@+id/button5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            android:text="@string/value5"
            android:textColor="#000"
            android:textSize="@dimen/button_text_size" />

        <Button
            android:id="@+id/button6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            android:text="@string/value6"
            android:textColor="#000"
            android:textSize="@dimen/button_text_size" />

        <ImageButton
            android:id="@+id/buttonMultiply"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            app:srcCompat="@drawable/multiply" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2ndBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:weightSum="4"
        app:layout_constraintStart_toStartOf="@+id/linearLayout2ndTop"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2ndTop"
        android:layout_marginStart="8dp">

        <Button
            android:id="@+id/button1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            android:text="@string/value1"
            android:textColor="#000"
            android:textSize="@dimen/button_text_size" />

        <Button
            android:id="@+id/button2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            android:text="@string/value2"
            android:textColor="#000"
            android:textSize="@dimen/button_text_size" />

        <Button
            android:id="@+id/button3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            android:text="@string/value3"
            android:textColor="#000"
            android:textSize="@dimen/button_text_size" />

        <ImageButton
            android:id="@+id/buttonSubtract"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            app:srcCompat="@drawable/subtract" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:weightSum="4"
        app:layout_constraintStart_toStartOf="@+id/linearLayout2ndBottom"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2ndBottom">

        <Button
            android:id="@+id/buttonClear"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/colorPrimary"
            android:text="@string/action_clear"
            android:textColor="@android:color/white"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            android:text="@string/value0"
            android:textColor="#000"
            android:textSize="@dimen/button_text_size" />

        <ImageButton
            android:id="@+id/buttonAddition"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            app:srcCompat="@drawable/add" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
